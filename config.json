{
  "sys": {
    "domain": null,
    "auto-update": false,
    "event-timeout": 604800,
    "sid-timeout": 300
  },
  "plugin": {
    "folder": "plugins"
  },
  "email": {
    "enable-email-verification": false,
    "email-account": {
      "email-host": null,
      "email-user": null,
      "email-password": null,
      "sender-name": "HCat"
    }
  },
  "client": {
    "repo": "https://github.com/HCAT-Project/hcat-client.git",
    "client-branch": "main",
    "client-folder": "static",
    "cmds-after-update": []
  },
  "network": {
    "upload": {
      "upload_folder": "static/files",
      "max_content_length": 104857600,
      "file_timeout": 86400
    },
    "receivers": {
      "FlaskHttpReceiver": {
        "host": "0.0.0.0",
        "port": 8080,
        "enable-static": true,
        "static-folder": "static",
        "enable-cors": true
      }
    }
  },
  "crypto": {
    "password": {
      "method": "scrypt",
      "kwargs": {
        "salt_length": 16,
        "n": 16384,
        "r": 8,
        "p": 1,
        "maxmem": 0,
        "dklen": 64
      }
    }
  }
}
